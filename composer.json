{
  "name": "pepeverde/zigra",
  "type": "library",
  "description": "Zigra PHP Framework",
  "keywords": [
    "framework",
    "routing"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Manuel Dalla Lana",
      "email": "manuel@pepeverde.agency"
    }
  ],
  "require": {
    "php": "^5.6|^7.0|^7.1|^7.2",
    "swiftmailer/swiftmailer": "~5.4.12",
    "ircmaxell/password-compat": "~1.0.4",
    "aura/session": "^2.1"
  },
  "autoload": {
    "psr-0": {
      "Zigra_": "src/"
    },
    "classmap": [
      "src/Zigra.php"
    ]
  },
  "autoload-dev": {
    "psr-4": { "ZigraTest\\": "tests/" }
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.12",
    "phpunit/phpunit": "^5.7.27|^6.5|^7.2"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  }
}
