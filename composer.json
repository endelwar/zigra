{
  "name": "endelwar/zigra",
  "type": "library",
  "description": "Zigra PHP Framework",
  "keywords": [
    "framework",
    "routing"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Manuel Dalla Lana",
      "email": "endelwar@aregar.it"
    }
  ],
  "require": {
    "php": "^8.1",
    "aura/session": "^4.0",
    "ircmaxell/password-compat": "~1.0.4"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^v3.65.0",
    "phpstan/phpstan": "^2.0.3",
    "phpunit/phpunit": "^9.6.22",
    "rector/rector": "^2.0.3"
  },
  "config": {
    "allow-plugins": {
      "composer/package-versions-deprecated": true
    },
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "autoload": {
    "psr-0": {
      "Zigra_": "src/"
    },
    "classmap": [
      "src/Zigra.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "ZigraTest\\": "tests/Zigra"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit"
  }
}
